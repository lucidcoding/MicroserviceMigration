<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @RenderSection("Canonical", required: false)
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/marathon.css")" rel="stylesheet" type="text/css" />
    @*    <link href="@Url.Content("~/Content/themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />*@
    @RenderSection("CSS", required: false)
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Marathon.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("JavaScript", required: false)
</head>
<body class="marathon">
    <header role="banner">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="../" class="navbar-brand">Marathon</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse" >
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li class="dropdown-open" >
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Customer</a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Collect", "Booking")">Register Collection</a></li>
                                <li><a href="@Url.Action("Return", "Booking")">Register Return</a></li>
                            </ul>
                        </li>
                        <li class="dropdown-open" >
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Invoice</a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Generate", "Invoice")">Generate Invoice</a></li>
                                <li><a href="@Url.Action("MarkAsPaid", "Invoice")">Mark as Paid</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Maintenance</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Request.IsAuthenticated)
                        {
                            <li class="dropdown-open" >
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Signed in as: @User.Identity.Name<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Sign Out", "SignOut", "User", routeValues: null, htmlAttributes: null)</li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Sign In", "SignIn", "User", routeValues: null, htmlAttributes: null)</li>
                            <li>@Html.ActionLink("Register", "Register", "User", routeValues: null, htmlAttributes: null)</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-fluid">
        @RenderBody()
    </main>
</body>
</html>
