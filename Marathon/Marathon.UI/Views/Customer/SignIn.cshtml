@using System.Data.Entity.Core.Objects
@model Marathon.UI.ViewModels.Customer.SignInViewModel

@{
    ViewBag.Title = "SignIn";
}

<h2>Sign In</h2>

@using (Html.BeginForm("SignIn", "Customer", FormMethod.Post, new { role = "form", ReturnUrl = ViewBag.ReturnUrl })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.EmailAddress):
        @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmailAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password):
        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
}