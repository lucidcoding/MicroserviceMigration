@using System.Data.Entity.Core.Objects
@model Marathon.UI.ViewModels.Booking.MakeViewModel

@section JavaScript
{
    <script src="@Url.Content("~/Scripts/Booking/Make.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>
}
@section CSS
{
    <link href="@Url.Content("~/Content/datepicker.css")" rel="stylesheet" type="text/css" />
}
@{
    ViewBag.Title = "Make";
}

<h2>Make</h2>

@using (Html.BeginForm("Make", "Booking", FormMethod.Post, new { role = "form" }))
{
    @Html.ValidationSummary(false, "There were some problems with the information you entered, please correct and resubmit.")
    <div class="form-group">
        @Html.LabelFor(model => model.VehicleId)
        @Html.DropDownListFor(model => model.VehicleId, Model.VehicleOptions, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VehicleId)
    </div>
    <div id="pendingBookingsForVehicleDiv">
        @if (Model.PendingBookings.Any())
        {
            @Html.Partial("_PendingForVehicle", Model.PendingBookings)
        }
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        <div class="input-group date">
            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", data_date_format="dd/mm/yyyy" })
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
        @Html.ValidationMessageFor(model => model.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        <div class="input-group date">
            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", data_date_format = "dd/mm/yyyy" })
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
        @Html.ValidationMessageFor(model => model.EndDate)
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
}

